<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.IEEEContactPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Gönder" Order="Primary" Priority="0" Clicked="SendEmail" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid Padding="20"
              RowSpacing="10">
            <Entry Placeholder="İsim Soyisim" x:Name="txtNameSurname"
                   Grid.Row="0"/>
            <Entry Placeholder="Email" x:Name="txtEmail"
                   Keyboard="Email" Grid.Row="1"/>
            <Editor x:Name="txtMessage"
                    Grid.Row="2"/>
            <!--<Button Text="Gönder" Clicked="SendEmail"
                    Grid.Row="3"/>-->
        </Grid>
    </ContentPage.Content>
</ContentPage>